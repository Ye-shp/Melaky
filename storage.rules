rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Proof uploads are private to the challenge participants
    match /proofs/{challengeId}/{fileName} {
      allow read: if request.auth != null &&
        (request.auth.uid == resource.metadata.challengerId || request.auth.uid == resource.metadata.challengeeId);
      allow write: if request.auth != null;
    }

    // Public assets (optional)
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }

    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
